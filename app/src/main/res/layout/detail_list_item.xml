<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dt_item_iV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/dt_item_despt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/dt_item_iV"
        android:ellipsize="end"
        android:lines="3"
        android:text="多地出台整合城乡居民医保方案 个人缴费提高 《每日经济新闻》记者注意到，
        年初国务院发布的《关于整合城乡居民基本医疗保险制度的意见》中明确,
        合理划分政府与个人的筹资责任，在提高政府补助标准的同时，适当提高个人缴费比重"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/dt_item_reaC"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/dt_item_despt"
        android:layout_toRightOf="@id/dt_item_iV"
        android:text="阅读数：+1" />

    <TextView
        android:id="@+id/dt_item_timeTv"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dt_item_despt"
        android:text="日期：2011-09-10" />


</RelativeLayout>